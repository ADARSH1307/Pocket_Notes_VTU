<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cv7_pe3">

    <TextView
        android:id="@id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:text="CHOOSE SUBJECT"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/ee"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="cv7_pe3_ee"
        android:text="EARTHQUAKE ENGINEERING"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/dcbs"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="cv7_pe3_dcbs"
        android:text="DESIGN CONCEPTS OF BUILDING SERVICES"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/res"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dcbs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="cv7_pe3_res"
        android:text="REINFORCED EARTH STRUCTURES"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/dhs"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="cv7_pe3_dhs"
        android:text="DESIGN OF HYDRAULIC STRUCTURES"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/utp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dhs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="cv7_pe3_utp"
        android:text="URBAN TRANSPORT PLANNING"
        app:backgroundTint="#0BC7DF" />


</RelativeLayout>