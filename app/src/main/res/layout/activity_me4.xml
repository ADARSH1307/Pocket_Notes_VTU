<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".me4">

    <TextView
        android:id="@id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:text=" CHOOSE SUBJECT"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/m4"
        android:onClick="m4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:text="M-4(18MAT41)"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/at"
        android:onClick="me4_at"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="APPLIED THERMODYNAMICS "
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/fm"
        android:onClick="me4_fm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/at"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text=" FLUID MECHANICS"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/kem"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="me4_kom"
        android:text="KINEMATICS OF MACHINES"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/me45"
        android:onClick="me45"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="18ME45"
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/me46"
        android:onClick="me46"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/me45"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="18ME46"
        app:backgroundTint="#0BC7DF" />


</RelativeLayout>