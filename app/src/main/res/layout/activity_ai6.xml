<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ai6">

    <TextView
        android:id="@id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:text="CHOOSE SUBJECT"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <Button
        android:id="@+id/aimlt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="ai6_aat"
        android:text="ADVANCED AIML TECHNIQUES "
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/pe"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aimlt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="ai6_pe"
        android:text="PROFESSIONAL ELECTIVE SUBJECT"
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/aipvr"
        android:onClick="ai6_aipv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="ADVANCED IMAGE PROCESSING WITH VR"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/wamlt"
        android:onClick="ai6_wamt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aipvr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="WEB APPLICATION USING ML TECHNIQUES"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/oe"
        android:onClick="ai6_oe"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wamlt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="OPEN ELECTIVE"
        app:backgroundTint="#0BC7DF" />

</RelativeLayout>