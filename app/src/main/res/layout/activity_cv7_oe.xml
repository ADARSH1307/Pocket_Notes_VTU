<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cv7_oe">

    <TextView
        android:id="@id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:text="CHOOSE SUBJECT"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/fem"
        android:onClick="cv7_oe_fem"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="FINITE ELEMENT METHOD"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/nma"
        android:onClick="cv7_oe_nma"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="NUMERICAL METHODS AND APPLICATIOON"
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/epm"
        android:onClick="cv7_oe_epm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nma"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="ENVIRONMENTAL PROTECTION  MANAGEMENT"
        app:backgroundTint="#0BC7DF" />



</RelativeLayout>