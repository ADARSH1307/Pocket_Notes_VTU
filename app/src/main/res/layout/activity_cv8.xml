<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cv8">

    <TextView
        android:id="@id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:text="CHOOSE SUBJECT"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <Button
        android:id="@+id/dpsc"
        android:onClick="cv8_dpsc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="DESIGN OF PRE-STRESSED CONCRETE"
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/be"
        android:onClick="cv8_be"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dpsc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="BRIDGE ENGINEERING"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/ps"
        android:onClick="cv8_ps"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/be"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="PREFABRICATED STRUCTURES"
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/afe"
        android:onClick="cv8_afe"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="ADVANCED FOUNDATION ENGINEERING"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/rr"
        android:onClick="cv8_rar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/afe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="REHABILITATION AND RETOFITTING"
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/pd"
        android:onClick="cv8_pd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="PAVEMENT DESIGN"
        app:backgroundTint="#0BC7DF" />

</RelativeLayout>