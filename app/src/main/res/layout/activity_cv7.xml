<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cv7">

    <TextView
        android:id="@id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:text="CHOOSE SUBJECT"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/qscm"
        android:onClick="cv7_qscm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="QUALITY SURVEVYING  CONTRACT MANAGEMENT"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/drss"
        android:onClick="cv7_drss"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qscm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="DESIGN OF RCC\n STEEL STRUCTURE "
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/pe2"
        android:onClick="cv7_pe2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="PROFESSIONAL ELECTIVE-2"
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/pe3"
        android:onClick="cv7_pe3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pe2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="PROFESSIONAL ELECTIVE-3"
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/oe"
        android:onClick="cv7_oe"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pe3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="OPEN ELECTIVIVE-B"
        app:backgroundTint="#0BC7DF" />


</RelativeLayout>