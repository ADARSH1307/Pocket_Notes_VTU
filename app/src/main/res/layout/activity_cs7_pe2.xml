<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cs7_pe2">

    <TextView
        android:id="@id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:text="CHOOSE SUBJECT"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sadp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="cs7_pe2_sadp"
        android:text="SOFTWARE ARCHITECTURE AND DESIGN PATTERNS"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/hpc"
        android:onClick="cs7_pe2_hpc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sadp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="HIGH PERFORMANCE COMPUTING"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/aca"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hpc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:onClick="cs7_pe2_aca"
        android:text="ADVANCED COMPUTER ARCHITECTURE"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/uid"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aca"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="cs7_pe2_uid"
        android:text="USER INETRPHASE DESIGN"
        app:backgroundTint="#0BC7DF" />


</RelativeLayout>