<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ec6">

    <TextView
        android:id="@id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aclonica"
        android:textStyle="bold"
        android:text="CHOOSE SUBJECT"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/dc"
        android:onClick="ec6_dc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="DIGITAL COMMUNICATION"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/es"
        android:onClick="ec6_es"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="EMBEDDED SYSTEMS"
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/ma"
        android:onClick="ec6_maa"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/es"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="MICROVAWE AND ANTENNAS"
        app:backgroundTint="#0BC7DF" />

    <Button
        android:id="@+id/oe"
        android:onClick="ec6_oe"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ma"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="OPEN ELECTIVE "
        app:backgroundTint="#0BC7DF" />
    <Button
        android:id="@+id/pe"
        android:onClick="ec6_pe"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="PROFESSIONAL ELECTIVE SUBJECT"
        app:backgroundTint="#0BC7DF" />

</RelativeLayout>